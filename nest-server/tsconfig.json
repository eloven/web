{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@app/user": [
        "libs/user/src"
      ],
      "@app/user/*": [
        "libs/user/src/*"
      ],
      "@app/uuid": [
        "libs/uuid/src"
      ],
      "@app/uuid/*": [
        "libs/uuid/src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}